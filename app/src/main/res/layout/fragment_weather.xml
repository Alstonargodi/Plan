<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.fragment_Weather"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-122dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="362dp"
        android:layout_height="234dp"
        android:background="@drawable/shadowblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="0.174">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="68dp"
            android:layout_height="67dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.064"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_d_location"
            android:layout_width="226dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/abezeeregular"
            android:gravity="center"
            android:text="location"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.052" />

        <TextView
            android:id="@+id/tv_d_uvindex"
            android:layout_width="321dp"
            android:layout_height="22dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="uvindex"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_icon"
            app:layout_constraintVertical_bias="0.08" />

        <TextView
            android:id="@+id/tv_d_feelslike"
            android:layout_width="148dp"
            android:layout_height="22dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="feelslike"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_uvindex"
            app:layout_constraintVertical_bias="0.055" />

        <TextView
            android:id="@+id/tv_d_wind"
            android:layout_width="148dp"
            android:layout_height="22dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="windspeed"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_feelslike"
            app:layout_constraintVertical_bias="0.082" />

        <TextView
            android:id="@+id/tv_d_cloud"
            android:layout_width="148dp"
            android:layout_height="21dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="cloudcover"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_wind"
            app:layout_constraintVertical_bias="0.282" />

        <TextView
            android:id="@+id/tv_d_visiblity"
            android:layout_width="149dp"
            android:layout_height="20dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="visibilty"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toEndOf="@+id/tv_d_feelslike"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_uvindex"
            app:layout_constraintVertical_bias="0.055" />

        <TextView
            android:id="@+id/tv_d_presure"
            android:layout_width="139dp"
            android:layout_height="23dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="presure"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.558"
            app:layout_constraintStart_toEndOf="@+id/tv_d_wind"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_visiblity"
            app:layout_constraintVertical_bias="0.111" />

        <TextView
            android:id="@+id/tv_d_humid"
            android:layout_width="148dp"
            android:layout_height="20dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="humidty"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.595"
            app:layout_constraintStart_toEndOf="@+id/tv_d_cloud"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_presure"
            app:layout_constraintVertical_bias="0.32" />

        <TextView
            android:id="@+id/tv_d_temp"
            android:layout_width="44dp"
            android:layout_height="42dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="00"
            android:textColor="#2E2B2B"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_icon"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_location"
            app:layout_constraintVertical_bias="0.024" />

        <TextView
            android:id="@+id/tv_d_desc"
            android:layout_width="119dp"
            android:layout_height="18dp"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="desc"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.355"
            app:layout_constraintStart_toEndOf="@+id/tv_d_temp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.18" />

        <TextView
            android:id="@+id/tv_d_time"
            android:layout_width="119dp"
            android:layout_height="18dp"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="time"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.355"
            app:layout_constraintStart_toEndOf="@+id/tv_d_temp"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_desc"
            app:layout_constraintVertical_bias="0.018" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="17dp"
            android:layout_height="26dp"
            android:gravity="center|top"
            android:text="C"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_d_uvindex"
            app:layout_constraintEnd_toStartOf="@+id/tv_d_desc"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_d_temp"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_location" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="14dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp" />

    <EditText
        android:id="@+id/et_carikan"
        android:layout_width="317dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/corner05"
        android:backgroundTint="#F3F0F0"
        android:gravity="center"
        android:hint="Find city"
        android:textColor="#2C2C2C"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.301" />

    <ImageView
        android:id="@+id/btn_find"
        android:layout_width="27dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toEndOf="@+id/et_carikan"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="0.301" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="380dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reclist"
        android:layout_width="360dp"
        android:layout_height="90dp"
        android:background="@drawable/shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="88dp"
        android:layout_height="21dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/righteous"
        android:text="History"
        android:textColor="#03A9F4"
        app:layout_constraintEnd_toStartOf="@+id/btn_refresh"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/recweatherforecast" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="88dp"
        android:layout_height="21dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/righteous"
        android:text="forecast"
        android:textColor="#03A9F4"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="26dp"
        android:layout_height="27dp"
        android:background="@drawable/ic_baseline_refresh_24"
        app:layout_constraintBottom_toTopOf="@+id/reclist"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/recweatherforecast"
        app:layout_constraintVertical_bias="0.977" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="88dp"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/righteous"
        android:text="Current"
        android:textColor="#03A9F4"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/et_carikan"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="723dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recweatherforecast"
        android:layout_width="356dp"
        android:layout_height="106dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/shadowtuablue"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

</androidx.constraintlayout.widget.ConstraintLayout>