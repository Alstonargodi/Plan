<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.util.addweather">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="357dp"
        android:layout_height="390dp"
        android:background="@drawable/shadowblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_fav"
        app:layout_constraintVertical_bias="0.061">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="149dp"
            android:layout_height="21dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/righteous"
            android:text="Feels like"
            android:textColor="#373B3C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_desc" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="149dp"
            android:layout_height="21dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/righteous"
            android:text="Wind speed"
            android:textColor="#373B3C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="149dp"
            android:layout_height="21dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/righteous"
            android:text="Cloud cover"
            android:textColor="#373B3C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="149dp"
            android:layout_height="21dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/righteous"
            android:text="Visiblity"
            android:textColor="#373B3C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="149dp"
            android:layout_height="21dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/righteous"
            android:text="Pressure"
            android:textColor="#373B3C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="149dp"
            android:layout_height="21dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/righteous"
            android:text="Humidty"
            android:textColor="#373B3C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="68dp"
            android:layout_height="67dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_location"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_d_temp"
            android:layout_width="44dp"
            android:layout_height="42dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="00"
            android:textColor="#2E2B2B"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/img_icon"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_location" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="17dp"
            android:layout_height="26dp"
            android:layout_marginTop="28dp"
            android:gravity="center|top"
            android:text="C"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_d_temp"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_time" />

        <TextView
            android:id="@+id/tv_d_location"
            android:layout_width="332dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/abezeeregular"
            android:gravity="center"
            android:text="location"
            android:textColor="#2E2B2B"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_d_feelslike"
            android:layout_width="148dp"
            android:layout_height="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="feelslike"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.909"
            app:layout_constraintStart_toEndOf="@+id/textView16"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_desc" />

        <TextView
            android:id="@+id/tv_d_cloud"
            android:layout_width="148dp"
            android:layout_height="21dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="cloudcover"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.975"
            app:layout_constraintStart_toEndOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_wind" />

        <TextView
            android:id="@+id/tv_d_wind"
            android:layout_width="148dp"
            android:layout_height="22dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="windspeed"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_feelslike" />

        <TextView
            android:id="@+id/tv_d_visiblity"
            android:layout_width="149dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="visibilty"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_cloud" />

        <TextView
            android:id="@+id/tv_d_pressure"
            android:layout_width="139dp"
            android:layout_height="23dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="presure"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_visiblity" />

        <TextView
            android:id="@+id/tv_d_humid"
            android:layout_width="148dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="humidty"
            android:textColor="#2E2B2B"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_pressure" />

        <TextView
            android:id="@+id/tv_d_desc"
            android:layout_width="337dp"
            android:layout_height="21dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="desc"
            android:textColor="#2E2B2B"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_icon" />

        <TextView
            android:id="@+id/tv_d_time"
            android:layout_width="101dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="time"
            android:textColor="#2E2B2B"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_d_location" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_fav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_star_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />


</androidx.constraintlayout.widget.ConstraintLayout>