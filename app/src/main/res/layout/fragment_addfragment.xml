<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.util.addfragment">

    <EditText
        android:id="@+id/et_status"
        android:layout_width="337dp"
        android:layout_height="47dp"
        android:backgroundTint="#838080"
        android:gravity="center"
        android:hint="Status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_title"
        app:layout_constraintVertical_bias="0.063" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="337dp"
        android:layout_height="47dp"
        android:backgroundTint="#838080"
        android:gravity="center"
        android:hint="Title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/et_deadline"
        android:layout_width="237dp"
        android:layout_height="43dp"
        android:backgroundTint="#838080"
        android:gravity="center"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.819"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_status"
        app:layout_constraintVertical_bias="0.061" />

    <EditText
        android:id="@+id/et_desc"
        android:layout_width="337dp"
        android:layout_height="64dp"
        android:backgroundTint="#838080"
        android:hint="desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintVertical_bias="0.084" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="334dp"
        android:layout_height="37dp"
        android:backgroundTint="#00BCD4"
        android:text="Save"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_desc"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="237dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Time"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_deadline" />

    <Button
        android:id="@+id/btn_settime"
        android:layout_width="58dp"
        android:layout_height="57dp"
        android:background="@drawable/ic_baseline_timer_24"
        app:layout_constraintBottom_toTopOf="@+id/et_desc"
        app:layout_constraintEnd_toStartOf="@+id/et_deadline"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_status"
        app:layout_constraintVertical_bias="0.445" />

</androidx.constraintlayout.widget.ConstraintLayout>