<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.util.updatefragment">

    <EditText
        android:id="@+id/et_up_status"
        android:layout_width="355dp"
        android:layout_height="52dp"
        android:hint="Status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_up_title"
        app:layout_constraintVertical_bias="0.058" />

    <EditText
        android:id="@+id/et_up_title"
        android:layout_width="355dp"
        android:layout_height="52dp"
        android:hint="Judul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/et_up_deadline"
        android:layout_width="355dp"
        android:layout_height="52dp"
        android:hint="deadline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_up_status"
        app:layout_constraintVertical_bias="0.066" />

    <EditText
        android:id="@+id/et_up_desc"
        android:layout_width="355dp"
        android:layout_height="52dp"
        android:hint="desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_up_deadline"
        app:layout_constraintVertical_bias="0.065" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="349dp"
        android:layout_height="43dp"
        android:backgroundTint="#FF9800"
        android:text="Update"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_up_desc"
        app:layout_constraintVertical_bias="0.114" />

    <Button
        android:id="@+id/btn_up_delete"
        android:layout_width="349dp"
        android:layout_height="43dp"
        android:backgroundTint="#F44336"
        android:text="delete"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_update"
        app:layout_constraintVertical_bias="0.107" />
</androidx.constraintlayout.widget.ConstraintLayout>