<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvlayout_habits"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <TextView
            android:id="@+id/tv_habits_name"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/abezeeregular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Habits name"
            android:textColor="#222222"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_habits_duration"
            app:layout_constraintTop_toTopOf="@+id/tv_habits_duration" />

        <TextView
            android:id="@+id/tv_habits_duration"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/abezeeregular"
            android:includeFontPadding="false"
            android:text="00"
            android:textColor="#3C3C3C"
            android:textSize="52sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.512" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>