<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_detail_weather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wclear"
    android:orientation="vertical"
    tools:context=".Detail_weather">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:layout_margin="9dp"
                    android:layout_weight="1"
                    android:background="@drawable/back" />

                <TextView
                    android:id="@+id/tvdetail_weather_loc"
                    android:layout_width="337dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/abezeeregular"
                    android:gravity="center"
                    android:text="location"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgv_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="132dp"
                    android:layout_weight="1"
                    android:padding="30dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/tvdetail_weather_temp"
                    android:layout_width="171dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TextView"
                    android:textSize="34sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvdetail_weather_desc"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/abezeeregular"
                android:gravity="center"
                android:text="desc"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="211dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView54"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/righteous"
                        android:text="Feelslike"
                        android:textColor="#FEFFFF" />

                    <TextView
                        android:id="@+id/textView56"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/righteous"
                        android:text="wind speed"
                        android:textColor="#FEFFFF" />

                    <TextView
                        android:id="@+id/textView58"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/righteous"
                        android:text="visibility"
                        android:textColor="#FEFFFF" />

                    <TextView
                        android:id="@+id/textView60"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/righteous"
                        android:text="presuere"
                        android:textColor="#FEFFFF" />

                    <TextView
                        android:id="@+id/textView62"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/righteous"
                        android:text="cloud"
                        android:textColor="#FEFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvdetail_weather_feels"
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/tvdetail_weather_wind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/tvdetail_weather_visib"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/tvdetail_weather_presuare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/tvdetail_weather_cloud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>