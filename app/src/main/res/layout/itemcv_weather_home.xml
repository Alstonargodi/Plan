<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"


    >

    <TextView
        android:id="@+id/tv_homew_loca"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/abezeeregular"
        android:gravity="center|left"
        android:text="Location"
        android:textColor="#DFDFDF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_homew_desc"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <TextView
        android:id="@+id/tv_homew_temp"
        android:layout_width="100dp"
        android:layout_height="84dp"
        android:fontFamily="@font/robotoregular"
        android:gravity="center"
        android:text="00"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toEndOf="@+id/img_home_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606" />

    <TextView
        android:id="@+id/tv_homew_desc"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/abezeeregular"
        android:gravity="center|right"
        android:text="Forecast"
        android:textColor="#DFDFDF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <TextView
        android:id="@+id/tv_homew_feels"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/abezeeregular"
        android:gravity="center|right"
        android:text="Feelslike"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_homew_temp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tv_homew_humid"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/abezeeregular"
        android:gravity="center|right"
        android:text="Humidty"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_homew_temp"
        app:layout_constraintTop_toBottomOf="@+id/tv_homew_feels"
        app:layout_constraintVertical_bias="0.385" />

    <ImageView
        android:id="@+id/img_home_icon"
        android:layout_width="75dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:tint="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_homew_desc"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@drawable/awan" />

</androidx.constraintlayout.widget.ConstraintLayout>