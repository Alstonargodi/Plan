<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Notification Reminder">

        <SwitchPreference
            app:key="@string/pref_key_notify"
            app:summary="task reminder"
            app:title="notification" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Theme mode">

        <ListPreference
            app:defaultValue="@string/pref_dark_auto"
            app:entries="@array/dark_mode"
            app:entryValues="@array/dark_mode"
            app:key="@string/pref_key_dark"
            app:title="themeMode"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>