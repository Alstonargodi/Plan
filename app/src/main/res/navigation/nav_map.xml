<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_map"
    app:startDestination="@id/fragment_home">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.wetterbericht.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/fragment_home"
        android:name="com.example.wetterbericht.view.Fragment.Fragment_Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_fragment_home_to_fragment_todo"
            app:destination="@id/fragment_todo" />
        <action
            android:id="@+id/action_fragment_home_to_fragment_weather"
            app:destination="@id/fragment_weather" />
        <action
            android:id="@+id/action_fragment_home_to_fragment_setting"
            app:destination="@id/fragment_setting" />
    </fragment>
    <fragment
        android:id="@+id/fragment_todo"
        android:name="com.example.wetterbericht.view.Fragment.Fragment_todo"
        android:label="fragment_todo"
        tools:layout="@layout/fragment_todo">
        <action
            android:id="@+id/action_fragment_todo_to_addfragment"
            app:destination="@id/addfragment" />
        <action
            android:id="@+id/action_fragment_todo_to_update"
            app:destination="@id/updatefragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment_weather"
        android:name="com.example.wetterbericht.view.Fragment.Fragment_Weather"
        android:label="fragment_weather"
        tools:layout="@layout/fragment_weather" >
        <argument
            android:name="Finddata"
            app:argType="com.example.wetterbericht.model.room.cuaca" />
        <action
            android:id="@+id/action_fragment_weather_to_addweather"
            app:destination="@id/addweather" />
        <action
            android:id="@+id/action_fragment_weather_to_currWeather"
            app:destination="@id/currWeather" />
    </fragment>
    <fragment
        android:id="@+id/fragment_setting"
        android:name="com.example.wetterbericht.view.Fragment.Fragment_Setting"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/addfragment"
        android:name="com.example.wetterbericht.view.util.addfragment"
        android:label="fragment_addfragment"
        tools:layout="@layout/fragment_addfragment" />
    <fragment
        android:id="@+id/updatefragment"
        android:name="com.example.wetterbericht.view.util.updatefragment"
        android:label="fragment_update"
        tools:layout="@layout/fragment_update" >
        <argument
            android:name="data"
            app:argType="com.example.wetterbericht.model.room.todo" />
        <action
            android:id="@+id/action_updatefragment_to_fragment_todo"
            app:destination="@id/fragment_todo" />
    </fragment>
    <fragment
        android:id="@+id/addweather"
        android:name="com.example.wetterbericht.view.util.addweather"
        android:label="fragment_addweather"
        tools:layout="@layout/fragment_addweather" />
    <fragment
        android:id="@+id/currWeather"
        android:name="com.example.wetterbericht.view.util.currweather"
        android:label="fragment_curr_weather"
        tools:layout="@layout/fragment_curr_weather" >
        <argument
            android:name="currData"
            app:argType="com.example.wetterbericht.model.room.cuaca" />
    </fragment>
    <activity
        android:id="@+id/splashscreen"
        android:name="com.example.wetterbericht.splashscreen"
        android:label="activity_splashscreen"
        tools:layout="@layout/activity_splashscreen" />
    <activity
        android:id="@+id/loginactivity"
        android:name="com.example.wetterbericht.view.Login.Loginactivity"
        android:label="activity_loginactivity"
        tools:layout="@layout/activity_loginactivity" />
</navigation>